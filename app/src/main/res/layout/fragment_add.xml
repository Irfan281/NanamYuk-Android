<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddFragment">

    <ImageView
        android:id="@+id/blob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:contentDescription="@string/blob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_blob_2"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/tv_tambah"
        style="@style/text.medium"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/pilih_metode"
        android:textColor="@color/text_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/choiceMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            style="@style/text.header"
            android:layout_width="match_parent"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:minHeight="48dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/rekomendasi_tanaman" />

        <TextView
            style="@style/text.subheader"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="16dp"
            android:text="@string/rekomendasi_tanaman_description"
            android:textColor="@color/text_secondary" />

        <!--        <TextView-->
        <!--            style="@style/text.description"-->
        <!--            android:textColor="@color/text_main"-->
        <!--            android:layout_marginVertical="8dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:text="@string/atau"/>-->

        <RadioButton
            style="@style/text.header"
            android:layout_width="match_parent"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:minHeight="48dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/pilih_tanaman" />

        <TextView
            style="@style/text.subheader"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="16dp"
            android:text="@string/pilih_tanaman_description"
            android:textColor="@color/text_secondary" />


    </RadioGroup>

    <Button
        android:id="@+id/next_button"
        style="@style/text.title"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_next"
        android:drawableEnd="@drawable/ic_arrow"
        android:paddingEnd="8dp"
        android:text="@string/lanjut"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>